{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/dataset-schema.json",
  "title": "Schema.org Dataset",
  "type": "object",
  "properties": {
    "@context": {
      "type": "string",
      "description": "The JSON-LD context for the Schema.org dataset"
    },
    "@type": {
      "type": "string",
      "enum": ["Dataset"],
      "default": "Dataset",
      "description": "The type of the Schema.org dataset"
    },
    "name": {
      "type": "string",
      "description": "The name of the dataset"
    },
    "description": {
      "type": "string",
      "description": "A description of the dataset"
    },
    "url": {
      "type": "string",
      "format": "uri",
      "description": "The URL associated with the dataset"
    },
    "creator": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string",
          "enum": ["Person", "Organization"],
          "description": "The type of the creator"
        },
        "name": {
          "type": "string",
          "description": "The name of the creator"
        }
      },
      "required": ["name"]
    },
    "dateCreated": {
      "type": "string",
      "format": "date-time",
      "description": "The date the dataset was created"
    },
    "license": {
      "type": "string",
      "description": "The license under which the dataset is distributed"
    },
    "distribution": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "@type": {
            "type": "string",
            "enum": ["DataDownload", "DataFeed"],
            "description": "The type of the dataset distribution"
          },
          "name": {
            "type": "string",
            "description": "The name of the distribution"
          },
          "contentUrl": {
            "type": "string",
            "format": "uri",
            "description": "The URL to access the distribution content"
          },
          "encodingFormat": {
            "type": "string",
            "description": "The format of the distribution content"
          }
        },
        "required": ["@type", "name", "contentUrl"]
      },
      "minItems": 1,
      "description": "The distributions associated with the dataset"
    }
  },
  "required": ["@context", "@type", "name", "creator", "dateCreated", "distribution"]
}
